{
  "name": "auto-commit-cli",
  "version": "1.0.0",
  "description": "A powerful CLI tool for generating Git commits with custom dates - more efficient, robust, and user-friendly",
  "main": "dist/index.js",
  "bin": {
    "auto-commit": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "git",
    "commit",
    "auto-commit",
    "github",
    "contribution",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "date-fns": "^3.6.0",
    "inquirer": "^9.2.23",
    "ora": "^8.0.1",
    "simple-git": "^3.25.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.14.10",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3",
    "vitest": "^2.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Lynthar/autoCommit-cli"
  }
}
